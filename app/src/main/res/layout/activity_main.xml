<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".activities.MainActivity">


    <ImageButton
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:id="@+id/sign_in_vk"
        android:background="@drawable/vk_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/sign_in_twitter"
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:layout_below="@id/sign_in_vk"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/sign_in_facebook"
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:layout_above="@id/sign_in_vk"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <com.google.android.gms.common.SignInButton
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:id="@+id/sign_in_google"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/sign_in_facebook"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />


</RelativeLayout>
